{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cortex Debug",
            "cwd": "${workspaceRoot}",
            "executable": "./build/firmware.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "jlink",
            "device": "STM32F407VE",
            "interface": "swd",
            "ipAddress": "127.0.0.1",
            "debugServer": 2331,
        },
        {
            "name": "GDB",
            "type": "gdb",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "target": "./build/firmware.elf",
            "gdbpath": "C:/SysGCC/arm-eabi/bin/arm-eabi-gdb.exe",
            "autorun": [
                "target remote localhost:2331",
                "symbol-file ./build/firmware.elf",
                "load",
                "monitor reset"
            ]
        }
    ]
}