<?xml version="1.0" encoding="utf-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
 <xs:include schemaLocation="Base.xsd"/>
 <xs:element name="sensorsConfig">
  <xs:complexType>
   <xs:sequence>
    <xs:choice minOccurs="1" maxOccurs="unbounded">
     <xs:element ref="CE301"/>
     <xs:element ref="SimpleSensor"/>
    </xs:choice>
   </xs:sequence>
  </xs:complexType>
 </xs:element>
 <!--===============================================-->
 <!--===============================================-->
 <!--===============================================-->
 <xs:element name="CE301">
  <xs:complexType>
   <xs:complexContent>
    <xs:extension base="brSensorBase">
     <xs:sequence>
      <xs:element name="address">
       <xs:simpleType>
        <xs:restriction base="xs:int">
         <xs:minInclusive value="0"/>
         <xs:maxInclusive value="255"/>
        </xs:restriction>
       </xs:simpleType>
      </xs:element>
     </xs:sequence>
    </xs:extension>
   </xs:complexContent>
  </xs:complexType>
 </xs:element>
 <xs:element name="SimpleSensor">
  <xs:complexType>
   <xs:complexContent>
    <xs:extension base="brSensorBase">
     <xs:sequence>
      <xs:element name="intPrm" type="xs:int"/>
      <xs:element name="floatPrm" type="xs:float"/>
      <xs:element name="doublePrm" type="xs:double"/>
      <xs:element name="strPrm">
       <xs:simpleType>
        <xs:restriction base="xs:string">
         <xs:enumeration value="V0"/>
         <xs:enumeration value="V1"/>
         <xs:enumeration value="V2"/>
        </xs:restriction>
       </xs:simpleType>
      </xs:element>
      <xs:element name="boolPrm" type="xs:boolean"/>
      <xs:element name="enumA">
       <xs:simpleType>
        <xs:restriction base="xs:int">
         <xs:enumeration value="5"/>
         <xs:enumeration value="6"/>
         <xs:enumeration value="7"/>
         <xs:enumeration value="10"/>
        </xs:restriction>
       </xs:simpleType>
      </xs:element>
      <xs:element name="enumB">
       <xs:simpleType>
        <xs:restriction base="xs:int">
         <xs:enumeration value="0"/>
         <xs:enumeration value="1"/>
        </xs:restriction>
       </xs:simpleType>
      </xs:element>
     </xs:sequence>
    </xs:extension>
   </xs:complexContent>
  </xs:complexType>
 </xs:element>
</xs:schema>
